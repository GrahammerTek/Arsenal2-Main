  <!--Marlin Model 336 Classic-->
  <ThingDef ParentName="HIDGun_MainWeaponBase_Makeable">
    <defName>HIDGun_Marlin336Model</defName>
    <label>Marlin Model 336 Classic</label>
    <description>A powerful lever-action repeater rifle, chambered for .30-30 Winchester cartridges.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Marlin336</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.35,1.35)</drawSize>
    </graphicData>
    <possessionCount>1</possessionCount>
    <soundInteract>Interact_Rifle</soundInteract>
    <equippedDistanceOffset>0.16</equippedDistanceOffset>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>3.40</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>0.77</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>SimpleGun</li>
      <li>CivilDefenseRifle</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <displayPriority>400</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HIDBullet_3030Winchester</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>30.9</range>
        <soundCast>HID_Shot_ThunderLeverGun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
