      <preExplosionSpawnChance>0.6</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>
  <!--M202 Flash-->
  <ThingDef ParentName="HIDGun_MainWeaponBase_Makeable">
    <defName>HIDGun_M202Flash</defName>
    <label>M202 Flash</label>
    <description>A fairly lightweight incendiary launcher boasting a four round capactity and capable of multiple use. It reloads from a large clip which holds all four rockets, and features a collapsable rear to reduce bulk.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/M202Flash</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.3,1.3)</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>6.5</Mass>
      <RangedWeapon_Cooldown>7.6</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Industrial</techLevel>
    <weaponTags Inherit="False">
      <li>GunHeavy</li>
      <li>GunSingleUse</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HIDBullet_M202Flash</defaultProjectile>
        <forcedMissRadius>2.9</forcedMissRadius>
        <warmupTime>4.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>35.9</range>
        <ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <burstShotCount>4</burstShotCount>
        <soundCast>HID_Shot_RLauncher</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
